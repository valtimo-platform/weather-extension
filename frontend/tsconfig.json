{
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    // left at es2020 instead of es2022. es2022 gives build errors when buildings libs sequentially for unknown reasons
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "rootDir": "src"
  },
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "skipMetadataEmit": true,
    "genDir": "temp"
  }
}
